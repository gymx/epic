---
import BaseLayout from "../layouts/BaseLayout.astro";
const title = "404 Error";
---

<BaseLayout title={title}>
  <div class="errorpage">
    <h1>Oops!</h1>
    <h2>The page you're looking for is not here...</h2>
    <a class="btn-cta" href="/epic/">Back Home</a>
  </div>
</BaseLayout>

<style>
  .errorpage {
    margin: 4rem 2rem;
  }
  h2 {
    margin-bottom: 4rem;
    text-align: center;
  }
</style>
