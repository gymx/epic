---
import HeadAndMeta from "../components/HeadAndMeta.astro";
import Header from "../components/Header.astro";
import Categories from "../components/Categories.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title } = Astro.props;
---
<html lang="en">
  <HeadAndMeta title={title}/>
  <body>
    <Header />
    <Categories />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    width: 80%;
    max-width: 900px;
    margin: 1.5rem auto;
  }
</style>
