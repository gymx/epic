---
import { Debug } from "astro/components";
import About from "../pages/about.astro";
const { post } = Astro.props;
const { title, category, tags, description } = post.data;
---

<div class="card">
  <div class:list={["header", `${category}`]}>
    <div class="cat">
      {category}
    </div>
  </div>
  <div class="taglist">
    <ul class="tags">
      {tags.map((tag) => <li class="tag">{tag}</li>)}
    </ul>
  </div>
  <a href=`/epic/blog/${post.slug}` ">
    <div class="title">{title}</div>
    <div class="description">{description}</div>
    <div class="more"><p>Read post --&gt;</p></div>
  </a>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    border-radius: 10px;
    box-shadow: 2px 4px 12px var(--clr-black);
  }

  .header {
    font-size: 1.2em;
    font-family: var(--ff-headings);
    font-weight: var(--fw-bold);
    color: var(--clr-primary-900);
    padding-inline: 0.5em;
    padding-bottom: 3em;
    border-radius: 10px 10px 0 0;
    background-size: cover;
  }

  .Gear {
    background-image: url("../assets/gear.jpg");
  }

  .Crew {
    background-image: url("../assets/crew.jpg");
  }

  .Racing {
    background-image: url("../assets/racing.jpg");
  }

  .Training {
    background-image: url("../assets/training.jpg");
  }

  .Nutrition {
    background-image: url("../assets/nutrition.jpg");
  }

  .title,
  .description,
  .more {
    padding: 0 0.5rem;
  }

  .description {
    line-height: 1.4em;
  }

  .title {
    font-family: var(--ff-headings);
    font-size: 1.2em;
    color: var(--clr-primary-900);
    line-height: 1em;
    margin: 0.5em 0;
  }

  .taglist {
    font-family: var(--ff-base);
    font-weight: var(--fw-semibold);
    font-size: small;
    color: var(--clr-secondary-500);
    margin: 0;
    margin-top: 0.2em;
  }
  .tags {
    display: flex;
    justify-content: flex-start;
    gap: 0.5em;
  }

  ul {
    margin: 0 0.5em;
    padding: 0;
  }

  .tags li {
    list-style-type: none;
    border: 2px solid var(--clr-secondary-500);
    border-radius: 4px;
    padding: 0.1rem 0.2rem;
  }

  .more {
    color: var(--clr-primary-900);
    font-family: var(--ff-headings);
    align-self: center;
  }
</style>
