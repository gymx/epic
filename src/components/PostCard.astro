---
import { Debug } from 'astro/components';
import About from "../pages/about.astro";
const { post } = Astro.props;
---
<div class="card">
  <div class="header">{post.data.category}</div>
  <ul class="tags">
    { post.data.tags.map( (tag) => <li class="tag">{tag}</li>) }
  </ul>
  <div class="title">{post.data.title}</div>
  <div class="description">{post.data.description}</div>
  <div class="more"><a href={post.slug}>Read more...</a></div>
  </div>


<style>
  ul {
    padding: 0;
  }
  .card {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--clr-primary-500);
    border-radius: 10px;
    max-width: 30%;
    min-width: 200px;
    box-shadow: 3px 6px 18px var(--clr-black);
  }
  
  .header {
    font-size: 1.2em;
    font-family: var(--ff-headings);
    font-weight: var(--fw-bold);
    color: var(--clr-primary-900);
    padding: 0 .2em;
    background-color: var(--clr-primary-500);
    border-radius: 10px 10px 0 0;
  }

  .title, .description, .more {
    padding: 0 .5rem;
  }

  .description {
    line-height: 1.4em;
  }
  
  .title {
    font-family: var(--ff-headings);
    font-size: 1.2em;
    line-height: 1em;
    margin: .5em 0;
  }

  .tags {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    gap: .3em;
    padding-left: .3rem;
    margin-top: .4em;
  }

  .tags li {
    font-family: var(--ff-headings);
    font-weight: var(--fw-bold);
    font-size: small;
    color: var(--clr-secondary-500);
    list-style-type: none;
    border: 2px solid var(--clr-secondary-500);
    border-radius: 4px;
    padding: 0.1rem 0.2rem;
  }
  
</style>