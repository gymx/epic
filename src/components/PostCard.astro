---
import { Debug } from 'astro/components';
import About from "../pages/about.astro";
const { post } = Astro.props;
const { title, category, tags, description } = post.data;
---
<div class="card">
  <div class:list={['header', `${category}`]}>
    <div class="cat">
      {category}
    </div>
    <!-- dymanic image based on category of post
    want this to be background image under header
    -->
    <!-- <img src=`../../src/assets/images/${category}.jpg` alt="graphic representation of category for displayed post"/> -->
  </div>
  <div>
    <ul class="tags">
      { tags.map( (tag) => <li class="tag">{tag}</li>) }
    </ul>
  </div>
  <div class="title">{title}</div>
  <div class="description">{description}</div>
  <div class="more"><a href={post.slug}>Read post --&gt;</a></div>
</div>


<style>
  .card {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--clr-primary-500);
    border-radius: 10px;
    max-width: 20ch;
    min-width: 275px;
    box-shadow: 3px 6px 18px var(--clr-black);
  }
  
  .header {
    font-size: 1.2em;
    font-family: var(--ff-headings);
    font-weight: var(--fw-bold);
    color: var(--clr-primary-900);
    padding: 0 .2em;
    height: 150px;
    background-color: var(--clr-primary-500);
    border-radius: 10px 10px 0 0;
    position: relative;
    isolation: isolate;
  }

  /* .cat {
    display: inline;
    background-color: var(--clr-white);
  }
  
  .Gear {
    background-image: url('../../../src/assets/images/gear.jpg');
    background-size: cover;
    background-repeat: no-repeat;
  }
 */


  .title, .description, .more {
    padding: 0 .5rem;
  }

  .description {
    line-height: 1.4em;
  }
  
  .title {
    font-family: var(--ff-headings);
    font-size: 1.2em;
    line-height: 1em;
    margin: .5em 0;
  }

  .tags {
    display: flex;
    justify-content: flex-start;
    gap: .5em;
  }

ul {
    margin: 0 .5em;
    padding:0;
  }

  .tags li {
    font-family: var(--ff-base);
    font-weight: var(--fw-semibold);
    font-size: small;
    color: var(--clr-secondary-500);
    list-style-type: none;
    border: 2px solid var(--clr-secondary-500);
    border-radius: 4px;
    padding: 0.1rem 0.2rem;
  }

  .more {
    align-self: center;
  }
  
  .more a {
    font-family: var(--ff-headings);
    color: var(--clr-primary-900);
  }
  
</style>